# Django Backend Environment Variables

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-secure-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-app.onrender.com

# Database Configuration (PostgreSQL)
# Use DATABASE_URL for production (Render will provide this automatically)
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Or use individual database settings for local development
DB_NAME=airbnb_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.onrender.com

# Redis (for Channels/WebSocket)
REDIS_URL=redis://localhost:6379

# Stripe Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Google OAuth2
GOOGLE_OAUTH2_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH2_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth2
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
